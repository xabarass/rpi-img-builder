#!/usr/bin/env bash
set -e

# Enable root login using passwords
echo "openssh-server openssh-server/permit-root-login select false" | debconf-set-selections
sed -i "s/PermitRootLogin without-password/PermitRootLogin no/g" /etc/ssh/sshd_config

echo "Match User scion"	>> /etc/ssh/sshd_config
echo -e "\tPasswordAuthentication no" >> /etc/ssh/sshd_config

# Install the sshd_check_keys.service
systemctl enable /etc/systemd/system/sshd_check_keys.service
